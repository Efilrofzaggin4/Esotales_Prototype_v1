<h2>Editez un article</h2>

<form class="admin_form" action="/admin/actualites/editActu/<%=actus.id%>" method="post">
	<input type="hidden" name="id" value="<%=actus.id%>" />
	<p>
		<label>Titre de l'actu</label>
	</p>
	<p>
		<input type="text" name="titre" value="<%=actus.titre%>" required>
	</p>
	<p>
		<label>contenu de l'article</label>	
	</p>
	<p>
		<textarea name="contenu" rows="7" cols="40" required><%=actus.contenu%></textarea>
	</p>
	
	<p>
		<button class='js-form-submit' type="submit">Enregistrer</button>
	</p>
	
	
	
	
	
</form>