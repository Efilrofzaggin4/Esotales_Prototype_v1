<section class="index-actus">
    <h2>Les Actualités</h2>


    <% for(let i = 0; i < actus.length; i++) { %>
        <article data-id="<%=actus[i].id%>" class="actualité">

            <a href="/actusIndex/<%=actus[i].id%>"><%=actus[i].titre%></a>

            <p>
                <img class="actu-img" src="/<%=actus[i].image_url%>" alt="<%=actus[i].titre%>">
            </p>

            <p>
                <%=actus[i].contenu.substring(0, 100)%>
            </p>
            
            <p><%=actus[i].date.toLocaleDateString()%></p>
        </article>
    <% } %>
</section>