<h2>Gestion d'actualités</h2>

<table class="admin-table">
	<thead>
			<th>Titre</th>
            <th>Contenu</th>
            <th></th>
            <th></th>
			<th></th>
	</thead>
	<tbody>
		<% for(let i = 0; i < actus.length; i++) { %>
			<tr data-id="<%=actus[i].id%>">
				<td>
					<a href="/actualites/<%=actus[i].id%>"><%=actus[i].titre%></a>
				</td>
				<td><%=actus[i].contenu.substring(0, 30)%> ...</td>
                <td><%=actus[i].date.toLocaleDateString()%></td>
				
				<td>
                    <a class="edit" href="/admin/actualites/editActu/<%=actus[i].id%>">edit</a>
                    <button class="js-remove-actu-button" data-id="<%=actus[i].id%>">supp</button>
                </td>
				<td><img class="mini-img"
					src="/<%=actus[i].image_url%>"
					alt="<%=actus[i].titre%>"></td>
			</tr>
		<% } %>
	</tbody>
</table>

<a class="back" href="actualites/addActu">Ajouter une actualité</a>

<script language="javascript" src="/js/index.js"></script>